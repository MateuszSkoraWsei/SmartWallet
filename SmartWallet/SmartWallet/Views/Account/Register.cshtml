
@model SmartWallet.Views.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <h2 class="text-center fw-bold">Dołącz do SmartWallet</h2>
                <p class="text-muted text-center">Zarządzaj swoimi finansami z głową</p>
                <hr />
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label font-weight-bold">Imię</label>
                            <input asp-for="Name" class="form-control" placeholder="Jan" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Surname" class="form-label">Nazwisko</label>
                            <input asp-for="Surname" class="form-control" placeholder="Kowalski" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Adres E-mail</label>
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Gender" class="form-label">Płeć</label>
                            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<SmartWallet.Models.GenderType>()" class="form-select">
                                <option value="">Wybierz...</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateOfBirth" class="form-label">Data urodzenia</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>

                    

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label">Hasło</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Powtórz hasło</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="privacyPolicy" required>
                        <label class="form-check-label" for="privacyPolicy">
                            Akceptuję <a asp-controller="Home" asp-action="Privacy" target="_blank">Politykę prywatności</a>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">Utwórz konto</button>
                </form>

                <div class="mt-4 text-center">
                    <p class="text-muted">Masz już konto? <a asp-action="Login" class="text-primary text-decoration-none fw-bold">Zaloguj się</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}