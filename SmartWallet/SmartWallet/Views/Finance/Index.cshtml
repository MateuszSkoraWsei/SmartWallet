@model SmartWallet.Models.ViewModels.BalanceViewModel

@{
    ViewData["Title"] = "Stan Konta";
    Layout = "_DashboardLayout";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">Twoje Finanse</h2>
            <p class="text-muted">Podsumowanie dostępnych środków i aktywności.</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-4 bg-gradient bg-primary text-white p-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase opacity-75 small fw-bold mb-2">Dostępne środki</h6>
                            <h1 class="display-4 fw-bold mb-0">@Model.TotalBalance.ToString("C")</h1>
                        </div>
                        <i class="bi bi-bank fs-1 opacity-50"></i>
                    </div>
                    <hr class="my-4 opacity-25">
                    <div class="row text-center">
                        <div class="col-6 border-end border-white border-opacity-25">
                            <p class="small mb-0 opacity-75">Wpływy (30 dni)</p>
                            <h4 class="fw-bold">@Model.MonthlyIncomes.ToString("C")</h4>
                        </div>
                        <div class="col-6">
                            <p class="small mb-0 opacity-75">Wydatki (30 dni)</p>
                            <h4 class="fw-bold text-warning">@Model.MonthlyExpenses.ToString("C")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 p-3">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">Informacje o koncie</h6>
                    <div class="mb-3">
                        <small class="text-muted d-block">Typ konta</small>
                        <span class="badge bg-success-subtle text-success rounded-pill">Konto Osobiste Premium</span>
                    </div>
                    <div>
                        <small class="text-muted d-block">Numer konta</small>
                        <code class="text-dark fw-bold fs-5">@Model.AccountNumber</code>
                    </div>
                </div>
            </div>
        </div>
        <div class="card border-0 shadow-sm rounded-4 p-4">
            <h5 class="fw-bold mb-4">Struktura wydatków</h5>
            <canvas id="expensesChart" style="max-height: 300px;"></canvas>
        </div>
        <div class="card border-0 shadow-sm rounded-4 p-4">
            <h5 class="fw-bold mb-4">Wydatki i Zyski Ostatniego Miesiąca: </h5>
            <canvas id="LastMonthLineChart" style="max-height: 300px;"></canvas>
        </div>
    </div>
</div>
@section Scripts {
<script>
    document.addEventListener("DOMContentLoaded", function () {
       
            fetch('/Finance/GetCategoryCharts')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('expensesChart').getContext('2d');

                
                const colorMap = {
                    'text-danger': '#dc3545',   
                    'text-success': '#198754',  
                    'text-warning': '#ffc107',  
                    'text-info': '#0dcaf0',     
                    'text-secondary': '#6c757d' 
                };

                
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: data.map(x => x.categoryName),
                        datasets: [{
                            label: 'Suma wydatków',
                            data: data.map(x => x.totalAmount),
                            backgroundColor: data.map(x => colorMap[x.color] || '#cbd5e0'),
                            hoverOffset: 15,
                            borderWidth: 2,
                            borderColor: '#ffffff'
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    padding: 20,
                                    usePointStyle: true
                                }
                            }
                        },
                        cutout: '70%' 
                    }
                });
            })
            .catch(error => console.error('Błąd pobierania danych:', error));

                    fetch('/Finance/GetBalanceHistory')
            .then(res => res.json())
            .then(data => {
                    const ctx = document.getElementById('LastMonthLineChart').getContext('2d');

                // Tworzymy gradient pod linią (efekt Premium)
                const gradient = ctx.createLinearGradient(0, 0, 0, 400);
                gradient.addColorStop(0, 'rgba(13, 110, 253, 0.3)');
                gradient.addColorStop(1, 'rgba(13, 110, 253, 0)');

                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: data.map(x => x.date),
                        datasets: [{
                            label: 'Saldo (PLN)',
                            data: data.map(x => x.balance),
                            borderColor: '#0d6efd',
                            backgroundColor: gradient,
                            fill: true,
                            tension: 0.4, // Robi gładkie, zaokrąglone linie
                            pointRadius: 4,
                            pointBackgroundColor: '#0d6efd'
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            y: { beginAtZero: false, grid: { display: false } },
                            x: { grid: { display: false } }
                        }
                    }
                });
            });
    });
</script>
}