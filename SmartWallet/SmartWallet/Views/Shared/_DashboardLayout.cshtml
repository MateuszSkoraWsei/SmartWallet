<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartWallet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .sidebar {
            min-height: 100vh;
            width: 250px;
            background: #212529;
            color: white;
        }

        .main-content {
            flex-grow: 1;
            background: #f8f9fa;
        }
    </style>
</head>
<body class="d-flex">

    <div class="sidebar d-flex flex-column p-3">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <i class="bi bi-wallet2 me-2"></i>
            <span class="fs-4">SmartWallet</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a asp-controller="Dashboard" asp-action="Index" class="nav-link text-white active">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
            </li>
            <li>
                <a asp-controller="Transactions" asp-action="Index" class="nav-link text-white">
                    <i class="bi bi-arrow-left-right me-2"></i> Transakcje
                </a>
            </li>
        </ul>
        <hr>
        <div class="dropdown">
            <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                <button type="submit" class="btn btn-outline-light w-100 text-start">
                    <i class="bi bi-box-arrow-right me-2"></i> Wyloguj
                </button>
            </form>
        </div>
    </div>

    <div class="main-content">
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4 p-3">
            <div class="container-fluid">
                <span class="navbar-text">Witaj z powrotem!</span>
            </div>
        </nav>
        <div class="container-fluid px-4">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>