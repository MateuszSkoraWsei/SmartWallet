@model CreateTransactionViewModel

@{
    ViewData["Title"] = "Wyślij Przelew";
    Layout = "_DashboardLayout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-primary py-4 text-center">
                    <h4 class="text-white fw-bold mb-0">Nowy Przelew</h4>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create" method="post">
                        <div class="mb-4">
                            <label asp-for="AccountNumber" class="form-label text-muted small fw-bold">NUMER KONTA ODBIORCY</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-person"></i></span>
                                <input asp-for="AccountNumber"  type="text" class="form-control bg-light border-0 shadow-none" placeholder="00 0000 0000..." required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="TransactionName" class="form-label text-muted small fw-bold">TYTUŁ PRZELEWU</label>
                            <input asp-for="TransactionName"  type="text" class="form-control bg-light border-0 shadow-none" required>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label text-muted small fw-bold">OPIS PRZELEWU</label>
                            <textarea asp-for="Description"  type="text" class="form-control bg-light border-0 shadow-none" ></textarea>
                        </div>

                        <div class="row mb-4">
                            <div class="col-12">
                                <label asp-for="Amount" class="form-label text-muted small fw-bold">KWOTA (PLN)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 text-primary fw-bold">zł</span>
                                    <input asp-for="Amount"  type="number" step="0.01" class="form-control bg-light border-0 shadow-none fs-4 fw-bold" placeholder="0,00" required>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm py-3">
                                Wyślij pieniądze
                            </button>
                            <a asp-controller="Transaction" asp-action="Create" class="btn btn-link text-muted mt-2 text-decoration-none">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
